{
  "name": "ellie",
  "version": "1.0.0",
  "description": "Ellie Template",
  "author": "Pasquale Vitiello <pasqualevitiello@gmail.com>",
  "license": "GPLv3",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/pasqualevitiello/ellie.git"
  },
  "bugs": {
    "url": "https://bitbucket.org/pasqualevitiello/ellie/issues"
  },
  "scripts": {
    "clean": "rimraf shortener_app/static/shortener_app/{css/*,js/*,images/*}",
    "autoprefixer": "postcss -u autoprefixer -r shortener_app/static/shortener_app/css/*",
    "autoprefixer-prod": "postcss --no-map -u autoprefixer -r shortener_app/static/shortener_app/css/*",
    "scss": "node-sass --output-style compressed -o shortener_app/static/shortener_app/css src/scss",
    "scss-production": "node-sass -x --output-style compressed -o shortener_app/static/shortener_app/css src/scss",
    "lint": "eslint src/js || true",
    "lint-scss": "stylelint src/scss/*.scss --syntax scss || true",
    "uglify": "mkdirp shortener_app/static/shortener_app/js -p && uglifyjs src/js/*.js -m -c -o shortener_app/static/shortener_app/js/main.min.js",
    "imagemin": "imagemin src/images/* -o shortener_app/static/shortener_app/images",
    "browser-sync": "browser-sync start --files \"shortener_app/static/shortener_app/css/*.css, shortener_app/static/shortener_app/js/*.js, shortener_app/templates/**/*.html\" --proxy 127.0.0.1:8000 --reload-delay=300 --reload-debounce=500",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:css-prod": "run-s lint-scss scss autoprefixer-prod",
    "build:js": "run-s lint uglify",
    "build:images": "run-s imagemin",
    "build": "run-s build:js build:css-prod build:images",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch:images": "onchange \"src/images\" -- run-s build:images",
    "serve": "concurrently --kill-others \"npm run watch:*\" \"python manage.py runserver\"  \"npm run browser-sync\" "
  },
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "browser-sync": "^2.12.8",
    "concurrently": "^4.0.1",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.5.4",
    "stylelint": "^9.4.0",
    "uglify-es": "^3.3.10"
  },
  "homepage": "https://bitbucket.org/pasqualevitiello/ellie#readme",
  "main": ".eslintrc.js"
}
